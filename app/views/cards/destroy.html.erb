<%= fields model: @deck do |form| %>
  <%= form.fields_for :cards, child_index: params[:index] do |card_form| %>
    <%= turbo_frame_tag "card_#{card_form.index}" do %>
      <%= card_form.hidden_field :id, value: params[:id] %>
      <%= card_form.hidden_field :_destroy, value: true %>
    <% end %>
  <% end %>
<% end %>
